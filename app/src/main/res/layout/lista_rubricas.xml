<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lblEtiquetasRubrica1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lblRubrica"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/rubrica"
            android:fontFamily="@string/font1"
            android:layout_weight="10"/>
        <TextView
            android:id="@+id/lblPorcentaje"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Porcentaje"
            android:fontFamily="@string/font1"
            android:layout_weight="5"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/txtEtiquetasMatricula1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtRubrica"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@string/font2"
            android:textColor="@color/black"
            android:layout_weight="10"/>
        <TextView
            android:id="@+id/txtPorcentaje"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font2"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_weight="3"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnSeeDetails"
            android:gravity="center"
            android:layout_weight="2"
            android:background="@null"
            android:src="@android:drawable/ic_menu_info_details"
            android:contentDescription="@string/detalles" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lblValoracion1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lblvalorTutIndiv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/valor_tut_indiv"
            android:fontFamily="@string/font1"
            android:layout_weight="15"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/txtValoracion1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="3dp">
        <TextView
            android:id="@+id/txtValorTutIndiv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@string/font2"
            android:textColor="@color/black"
            android:layout_weight="5"/>
        <TextView
            android:id="@+id/txtComentarioTutIndiv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font2"
            android:textColor="@color/black"
            android:layout_weight="10"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lblValoracion2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lblvalorTutCol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/valor_tut_col"
            android:fontFamily="@string/font1"
            android:layout_weight="15"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/txtValoracion2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="3dp">
        <TextView
            android:id="@+id/txtValorTutCol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@string/font2"
            android:textColor="@color/black"
            android:layout_weight="5"/>
        <TextView
            android:id="@+id/txtComentarioTutCol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font2"
            android:textColor="@color/black"
            android:layout_weight="10"/>
    </LinearLayout>

</LinearLayout>