<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lblEtiquetasMatricula1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="3dp">
        <TextView
            android:id="@+id/lblModulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/modulo"
            android:fontFamily="@string/font1"
            android:layout_weight="3"/>
        <TextView
            android:id="@+id/txtModulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/modulo"
            android:fontFamily="@string/font2"
            android:layout_weight="10"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/txtEtiquetasMatricula1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="3dp">
        <TextView
            android:id="@+id/lblEstadoMatricula"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/estado"
            android:fontFamily="@string/font1"
            android:layout_weight="3"/>
        <Spinner
            android:id="@+id/spnEstadoMatricula"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:fontFamily="@string/font1"
            android:layout_weight="10"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lblEtiquetasMatricula2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lblValoracionAnteproyecto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/valoracion_anteproyecto"
            android:fontFamily="@string/font1"
            android:layout_weight="5"/>
        <TextView
            android:id="@+id/lblComentario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/comentario_valor_ante"
            android:fontFamily="@string/font1"
            android:layout_weight="8"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/txtEtiquetasMatricula2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtValoracionAnteproyecto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/valoracion_anteproyecto"
            android:textColor="@color/black"
            android:fontFamily="@string/font2"
            android:layout_weight="5"/>
        <TextView
            android:id="@+id/txtComentario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/comentario_valor_ante"
            android:fontFamily="@string/font2"
            android:layout_weight="8"/>
    </LinearLayout>


</LinearLayout>